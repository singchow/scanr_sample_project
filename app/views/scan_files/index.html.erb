<p id="notice"><%= notice %></p>

<h1>Listing Scan Files</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scan_files.each do |scan_file| %>
      <tr>
        <td>
          <%= image_tag scan_file.avatar.url(:medium) %>
        </td>
        <td><%= scan_file.result %></td>
        <td><%= link_to 'Show', scan_file %></td>
        <td><%= link_to 'Edit', edit_scan_file_path(scan_file) %></td>
        <td><%= link_to 'Destroy', scan_file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

